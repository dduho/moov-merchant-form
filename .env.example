# ==============================================
# CONFIGURATION GLOBALE MOOV MERCHANT FORM
# ==============================================

# Environnement (local, staging, production)
APP_ENV=local
APP_DEBUG=true

# URLs des services
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_URL=http://localhost:8000/api

# Base de données
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=moov_merchant
DB_USERNAME=root
DB_PASSWORD=

# Redis (cache et sessions)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@moovmoney.com
MAIL_FROM_NAME="Moov Money"

# SMS/Notifications
SMS_API_URL=https://api.sms-provider.com
SMS_API_KEY=your-sms-api-key
ADMIN_EMAIL=admin@moovmoney.com
ADMIN_PHONE=+22891000000

# Stockage fichiers
FILESYSTEM_DRIVER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=moov-merchant-docs

# Sécurité
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=60
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://merchant.moovmoney.com

# Monitoring
LOG_CHANNEL=stack
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn

# ==============================================
# CONFIGURATION SPÉCIFIQUE FRONTEND
# ==============================================

# API
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Fonctionnalités
VITE_ENABLE_PWA=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_SIGNATURE=true
VITE_ENABLE_OFFLINE_MODE=true

# Limites
VITE_MAX_FILE_SIZE=5120
VITE_MAX_FILES=10
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# ==============================================
# CONFIGURATION SPÉCIFIQUE BACKEND
# ==============================================

# Laravel
APP_NAME="Moov Merchant API"
APP_KEY=
APP_TIMEZONE=Africa/Lome
APP_LOCALE=fr

# Queue
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Cache
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
